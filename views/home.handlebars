<div class="container">
  {{#if loggedIn}}
  <h2 class="mt-4">Welcome back, {{User.name}}!</h2>
  {{else}}
  <h2 class="mt-4">Welcome to Tech Info To You!</h2>
  {{/if}}


  <section id="blogposts" class="row">
    {{#each posts}}
    <div class="postItem col-md-6 col-lg-4 my-3">
      <a href='/post/{{id}}' class="text-decoration-none">
        <div class="card h-100">
          <div class="card-body">
            <h1 class="card-title">{{title}}</h1>
            <h6 class="card-subtitle mb-2 text-muted">Author: {{User.username}}</h6>
            <p class="card-text">{{content}}</p>
            <p class="timestamp text-muted">{{created_at}}</p>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </section>
</div>