<div class="container">
  <section id="blogpost">
    <div class="postItem col-md-12 mt-4">
      <div class="card">
        <div class="card-body">
          <h1>{{title}}</h1>
          <h6 class="card-subtitle text-muted">Author: {{User.username}}</h6>
          <p class="card-text">{{content}}</p>
          <a href="/api/comment/{{id}}" class="btn btn-primary">Comment</a>
          <p class="timestamp">{{created_at}}</p>
        </div>
      </div>
      <section id="comments">
        <h2>Comments:</h2>
        <ul>
          <div class="comments-container" data-current-user-id="{{user_id}}">
            {{#each Comments}}
            <div class="comment" data-comment-id="{{id}}" data-user-id="{{User.id}}">
              <li class="list-group-item">
                <p id="{{content}}">{{content}}</p>
                <p>Author: {{User.username}}</p>
                <p>Posted on: {{createdAt}} </p>
              </li>
              {{#if isAuthor}}
              <a href='/api/comment/edit/{{id}}'><button class="edit_comment btn btn-primary"
                  data-id="{{id}}">Update</button></a>
              <button type="submit" class="delete_comment btn btn-danger" id="delete-comment-button"
                data-id="{{id}}">Delete</button>
              {{/if}}
            </div>
            {{/each}}
          </div>
        </ul>
      </section>
    </div>
  </section>
</div>
<script src="/js/comment.js"></script>